<%- include('partials/_header') %>
    <div class="container" style="margin-top: 10%; height: 100%;">
        <div class="row">
            <!-- FORM -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <form action="/add" method="POST">
                            <div>
                                <h3 class="text-center">Add a Book</h3>
                            </div>
                            <hr>
                            <div class="form-group mb-3">
                                <input type="text" name="title" placeholder="Type a Title" class="form-control">
                            </div>
                            <div class="form-group mb-3">
                                <textarea name="description" cols="80" class="form-control" placeholder="Type a Description"></textarea>
                            </div>
                            <div class="form-group mb-3">
                                <input type="text" name="autor" placeholder="Type a Writer" class="form-control">
                            </div>
                            <div class="form-group mb-3">
                                <input type="text" name="anio" placeholder="Type a Publish year" class="form-control">
                            </div>
                            <button type="submit" class="btn btn-dark btn-block">Add</button>
                        </form>
                    </div>
                </div>
            </div>
            <!-- LIST -->
            <div class="col-md-8">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <td>#</td>
                            <td>Title</td>
                            <td>Description</td>
                            <td>Writer</td>
                            <td>Year</td>
                            <td>Operation</td>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i = 0; i < books.length; i++) { %>
                        <tr>
                            <td><%= i + 1 %></td>
                            <td><%= books[i].title %></td>
                            <td><%= books[i].description %></td>
                            <td><%= books[i].autor %></td>
                            <td><%= books[i].anio %></td>
                            <td>
                                <a href="/check/<%= books[i]._id %>" 
                                    class="btn <%= books[i].status ? 'btn-success' : 'btn-dark' %> ">Check</a>
                                <a href="/delete/<%= books[i]._id %>" class="fas fa-trash fa-2x" style="color:rgb(238, 25, 25)"></a>
                                <a href="/edit/<%= books[i]._id %>" class="fas fa-edit fa-2x" style="color:rgb(46, 120, 163)"></a>
                            </td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
<%- include('partials/_footer') %>