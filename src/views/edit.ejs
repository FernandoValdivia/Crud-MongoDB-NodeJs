<%- include('partials/_header') %>

<div class="container" style="margin-top: 10%; height: 100%;">
    <div class="row">
        <!-- FORM EDIT -->
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <form action="/edit/<%= book._id %>" method="POST">
                        <div>
                            <h3 class="text-center">Edit a Book</h3>
                        </div>
                        <hr>
                        <div class="form-group mb-3">
                            <input type="text" name="title" value="<%= book.title %>" placeholder="Type a Title" class="form-control">
                        </div>
                        <div class="form-group mb-3">
                            <textarea name="description" cols="80" class="form-control" placeholder="Type a Description"><%= book.description %></textarea>
                        </div>
                        <div class="form-group mb-3">
                            <input type="text" name="autor" value="<%= book.autor %>" placeholder="Type a Writer" class="form-control">
                        </div>
                        <div class="form-group mb-3">
                            <input type="text" name="anio" value="<%= book.anio %>" placeholder="Type a Publish year" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-dark btn-block">Update</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/_footer') %>